generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  password    String
  companyId   String
  companyName String?
  role        String   @default("user") // "admin" | "user"
  permissions String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?

  company Company @relation(fields: [companyId], references: [id])
}

model Company {
  id        String   @id @default(cuid())
  name      String
  address   String?
  phone     String?
  email     String?
  website   String?
  logo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users                  User[]
  customers              Customer[]
  products               Product[]
  ledgerEntries          LedgerEntry[]
  customerCreditSettings CustomerCreditSettings[]
  overdueSettings        OverdueSettings?
}

model OverdueSettings {
  id                String   @id @default(cuid())
  companyId         String   @unique
  gracePeriod       Int
  interestRate      Float
  compoundingPeriod String?
  minimumFee        Float?
  updatedAt         DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id])
}

model Customer {
  id         String   @id @default(cuid())
  name       String
  email      String
  phone      String
  address    String
  panCard    String?
  aadharCard String?
  imageUrl   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  companyId  String
  createdBy  String

  company                Company                  @relation(fields: [companyId], references: [id])
  ledgerEntries          LedgerEntry[]
  customerCreditSettings CustomerCreditSettings[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  sku         String
  description String?
  price       Float
  stock       Int
  category    String
  unit        String?  // Unit of measurement (kg, pieces, etc.)
  imageUrl    String?  // Product image URL
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  companyId   String
  createdBy   String

  company Company @relation(fields: [companyId], references: [id])
}

model LedgerEntry {
  id                   String    @id @default(cuid())
  customerId           String
  type                 String // "Sell" | "Payment In" | "Payment Out" | "Partial Payment"
  invoiceNumber        String
  amount               Float
  date                 DateTime
  dueDate              DateTime? // Due date for the payment
  product              String?
  description          String
  status               String // "Paid" | "Unpaid" | "Overdue"
  paidDate             DateTime?
  paidAmount           Float? // Amount actually paid
  daysCount            Int?
  notes                String?
  paymentMethod        String?  // Payment method (cash, cheque, online, etc.)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  companyId            String
  createdBy            String
  partiallyPaid        Boolean?  @default(false)
  partialPaymentAmount Float?
  partialPaymentDate   DateTime?
  remainingAmount      Float?
  paidInterest         Float?
  relatedEntryId       String?
  partialPaymentId     String?

  customer Customer @relation(fields: [customerId], references: [id])
  company  Company  @relation(fields: [companyId], references: [id])
}

model CustomerCreditSettings {
  id           String   @id @default(cuid())
  customerId   String
  creditLimit  Float
  gracePeriod  Int
  interestRate Float
  companyId    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id])
  company  Company  @relation(fields: [companyId], references: [id])

  @@unique([customerId, companyId])
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  token     String
  expires   DateTime
  createdAt DateTime @default(now())
}

model Permission {
  id          String @id @default(cuid())
  name        String
  description String
  module      String // "ledger" | "products" | "customers" | "users" | "reports" | "settings"
  action      String // "view" | "create" | "edit" | "delete"
}
